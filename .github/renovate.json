{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "schedule:weekly"
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true
  },
  "rangeStrategy": "update-lockfile",
  "packageRules": [
    {
      "matchPackageNames": [
        "crate-ci/typos"
      ],
      "automerge": true
    }
  ]
}
